<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/op"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:background="@drawable/rounds"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:elevation="1dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="Password Updated"
            android:textColor="@color/purple_200"
            android:textSize="28dp"
            android:textStyle="bold"
            ></TextView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/password_updated_icon"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:gravity="center"
            android:elevation="1dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="your password has been updated, press login button to Access your account."
            android:textColor="@color/purple_200"
            android:textSize="12dp"

            ></TextView>

        <Button
            android:id="@+id/button"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/roundbutton"
            android:text="LOGIN"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>